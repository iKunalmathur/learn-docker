pipeline {
  agent {
    docker {
      image 'node:18'  // Use Node.js official image
      args '-v /var/run/docker.sock:/var/run/docker.sock' // If you also want Docker access inside
      args '-p 3000:3000 -p 3001:3000' // Expose ports for the frontend and backend
    }
  }

  tools {
    nodejs "NodeJS" // Only needed if you use Jenkins' installed Node. Else, docker image already has Node.
  }

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/iKunalmathur/learn-docker.git'
      }
    }

    stage('Install Backend') {
      steps {
        dir('express-app') {
          sh 'npm install'
        }
      }
    }

    stage('Install Frontend') {
      steps {
        dir('react-app') {
          sh 'npm install'
          sh 'npm run build'
        }
      }
    }

    stage('Success') {
      steps {
        echo 'Build Complete âœ…'
      }
    }
  }
}
