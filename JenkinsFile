pipeline {
  agent {
    docker {
      image 'node:18'  
      args '-v /var/run/docker.sock:/var/run/docker.sock -p 3000:3000 -p 3001:3000' 
    }
  }

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/iKunalmathur/learn-docker.git'
      }
    }

    stage('Install Backend') {
      steps {
        dir('express-app') {
          sh 'npm install'
        }
      }
    }

    stage('Install Frontend') {
      steps {
        dir('react-app') {
          sh 'npm install'
          sh 'npm run build'
        }
      }
    }

    stage('Success') {
      steps {
        echo 'Build Complete âœ…'
      }
    }
  }
}
