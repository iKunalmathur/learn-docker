pipeline {
  agent {
    docker {
      image 'node:18'  
      args '-p 3000:3000 -p 4000:4000' 
    }
  }

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/iKunalmathur/learn-docker.git'
      }
    }

    stage('Install Backend') {
      steps {
        dir('express-app') {
          sh 'npm install'
        }
      }
    }

    stage('Install Frontend') {
      steps {
        dir('react-app') {
          sh 'npm install'
          sh 'npm run build'
        }
      }
    }

    stage('Test Backend') {
      steps {
        dir('express-app') {
          sh 'npm start &'
          sh 'curl -s http://localhost:4000/api/todos'
        }
      }
    }

    stage('Success') {
      steps {
        echo 'Build Complete âœ…'
      }
    }
  }
}
